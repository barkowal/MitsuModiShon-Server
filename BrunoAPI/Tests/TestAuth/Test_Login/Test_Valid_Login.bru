meta {
  name: Test_Valid_Login
  type: http
  seq: 2
}

post {
  url: {{local}}:3000/api/v1/auth/login
  body: json
  auth: inherit
}

body:json {
  {
    "email":"{{uniqueEmail}}",
    "password":"passsword"
  }
}

assert {
  res.status: eq 201
}

tests {
  test("should return access and refresh token in cookies", function () {
    
    const refreshToken = res.getHeader('set-cookie')[0];
      const accessToken = res.getHeader('set-cookie')[1];
   
    expect(refreshToken).to.not.be.null;
    expect(accessToken).to.not.be.null;
   
  });
}

settings {
  encodeUrl: true
}
