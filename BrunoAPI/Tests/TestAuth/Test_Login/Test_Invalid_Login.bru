meta {
  name: Test_Invalid_Login
  type: http
  seq: 3
}

post {
  url: {{local}}:3000/api/v1/auth/login
  body: json
  auth: inherit
}

body:json {
  {
    "email":"thisuserdoesntexist",
    "password":"wrongpassword"
  }
}

assert {
  res.status: eq 422
}

tests {
  test("should not return cookies", function () {
    
    const cookies = res.getHeader('set-cookie');
   
    expect(cookies).to.be.undefined;
   
  });
}

settings {
  encodeUrl: true
}
